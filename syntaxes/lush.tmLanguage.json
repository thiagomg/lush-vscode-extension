{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LuSH",
  "scopeName": "source.lush",
  "fileTypes": ["lush"],
  "patterns": [
    {
      "include": "source.lua"
    },
    {
      "include": "#lush-modules"
    },
    {
      "include": "#string-interpolation"
    },
    {
      "include": "#shell-exec"
    },
    {
      "include": "#subshell-exec"
    }
  ],
  "repository": {
    "lush-modules": {
      "patterns": [
        {
          "name": "support.type.lush.module",
          "match": "\\b(env|files|fs|json|net|os|string|toml)(?=\\.)",
          "captures": {
            "1": {
              "name": "support.type.lush.module"
            }
          }
        },
        {
          "name": "support.function.lush",
          "match": "\\b(env|files|fs|json|net|os|string|toml)\\.(cwd|pushd|popd|chdir|pwd|set|get|del|print|zip|unzip|compress|decompress|ls|mkdir|rmdir|copy|move|rm|exists|is_dir|is_file|parent|read_file|write_file|load_file|from_string|save_file|wget|name|proc_names|proc_exes|pipe_exec|pipeline|mkdtemp|split|startswith|endswith)\\b",
          "captures": {
            "1": {
              "name": "support.type.lush.module"
            },
            "2": {
              "name": "support.function.lush"
            }
          }
        }
      ]
    },
    "string-interpolation": {
      "patterns": [
        {
          "name": "string.quoted.double.lush",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lush",
              "match": "\\\\."
            },
            {
              "name": "constant.other.placeholder.lush",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [
                {
                  "include": "source.lua"
                }
              ]
            }
          ]
        }
      ]
    },
    "shell-exec": {
      "patterns": [
        {
          "name": "meta.shell-exec.lush",
          "begin": "^\\s*\\$>",
          "end": "$",
          "beginCaptures": {
            "0": {
              "name": "keyword.operator.shell-exec.lush"
            }
          },
          "patterns": [
            {
              "name": "string.unquoted.shell-command.lush",
              "match": "[^`|\\s]+"
            },
            {
              "name": "support.function.lua-in-shell.lush",
              "begin": "`",
              "end": "`",
              "patterns": [
                {
                  "include": "source.lua"
                }
              ]
            },
            {
              "name": "keyword.operator.pipe.lush",
              "match": "\\|"
            }
          ]
        }
      ]
    },
    "subshell-exec": {
      "patterns": [
        {
          "name": "meta.subshell-exec.lush",
          "begin": "\\$\\(",
          "end": "\\)",
          "beginCaptures": {
            "0": {
              "name": "keyword.operator.subshell-exec.lush"
            }
          },
          "endCaptures": {
            "0": {
              "name": "keyword.operator.subshell-exec.lush"
            }
          },
          "patterns": [
            {
              "name": "string.unquoted.shell-command.lush",
              "match": "[^`|\\s]+"
            },
            {
              "name": "support.function.lua-in-shell.lush",
              "begin": "`",
              "end": "`",
              "patterns": [
                {
                  "include": "source.lua"
                }
              ]
            },
            {
              "name": "keyword.operator.pipe.lush",
              "match": "\\|"
            }
          ]
        }
      ]
    }
  }
}
