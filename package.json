{
  "name": "lush-lang",
  "displayName": "Lua Shell (LuSH) Language Support for VS Code",
  "description": "Syntax highlighting, IntelliSense, and snippets for the LuSH scripting language.",
  "version": "0.17.1",
  "publisher": "thiagomg",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiagomg/lush-vscode-extension.git"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "lush",
    "lua",
    "scripting",
    "file-system",
    "shell"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:lush"
  ],
  "contributes": {
    "languages": [
      {
        "id": "lush",
        "aliases": [
          "LuSH",
          "lush"
        ],
        "extensions": [
          ".lush"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/lush-light.svg",
          "dark": "./icons/lush-dark.svg"
        },
        "lush.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable LuSH diagnostics and validation"
        }
      }
    ],
    "grammars": [
      {
        "language": "lush",
        "scopeName": "source.lush",
        "path": "./syntaxes/lush.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "lush",
        "path": "./snippets/lush.json"
      }
    ],
    "configuration": {
      "title": "LuSH",
      "properties": {
        "lush.completion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable LuSH function completion"
        },
        "lush.hover.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover documentation for LuSH functions"
        },
        "lush.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable LuSH diagnostics and validation"
        }
      }
    },
    "commands": [
      {
        "command": "lush.showDocumentation",
        "title": "Show LuSH Documentation",
        "category": "LuSH"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "extensionDependencies": [
    "sumneko.lua"
  ]
}
